{
    "manifest_version": 2,
    "name": "Copy title and URL",
    "version": "1.0.0",
    "description": "表示しているページのタイトルとURLをクリップボードにコピー",
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/content.js"]
    }],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "permissions": ["tabs", "clipboardWrite", "commands"],
    "commands": {
        "copyToClipboard": {
            "suggested_key": {
                "default": "Alt+C"
            },
            "description": "Copy title and URL"
        }
    }
}
